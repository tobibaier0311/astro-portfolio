---
import { getLangFromUrl, useTranslations } from "@/i18n/utils";
import HeroIcons from "./HeroIcons";

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<div
  class="flex flex-col justify-center items-center gap-12 h-full lg:flex-row text-left"
>
  <div class="space-y-6">
    <!-- Hi, <span class="text-2">Tobi</span> here. -->
    <div class="text-8xl text-brand-4 font-extralight space-y-8">
      <p>{t("hero.hi")} {t("hero.tobi")} {t("hero.here")}</p>
    </div>

    <p class="text-md max-w-96 font-extralight">{t("hero.description")}</p>
    <HeroIcons />
  </div>

  <img
    class="object-cover w-64 h-64 rounded-full border-4"
    src="/images/profile-bw-min.JPG"
    alt=""
  />
  <!-- /assets/CV_Bild.jpg -->
</div>
