---
import { getLangFromUrl, useTranslations } from "@/i18n/utils";
import WebWelleImage from "../images/webwelle2.jpeg";
import BbafImage from "../images/bbaf2.jpeg";

const t = useTranslations(getLangFromUrl(Astro.url));
---

<div
  class="grid grid-cols-1 lg:grid-cols-2 gap-16 py-12 px-4 sm:px-8 font-extralight"
>
  <!-- Projekt 1 -->
  <div class="flex flex-col justify-center space-y-4 text-left">
    <h2 class="text-3xl sm:text-4xl text-brand-4">
      {t("projects.webwelle.title")}
    </h2>
    <p class="text-base sm:text-lg leading-relaxed">
      {t("projects.webwelle.description")}
    </p>
    <a
      class="underline underline-offset-4 text-brand-5 hover:text-brand-4 transition-colors duration-500 w-fit"
      href="https://radio-webwelle.de"
      target="_blank"
    >
      {t("projects.bbaf.cta")}
    </a>
  </div>

  <div class="flex justify-center items-center">
    <img
      class="rounded-md max-w-full h-auto shadow-md"
      src={WebWelleImage.src}
      alt="Radio Webwelle Projekt"
    />
  </div>

  <!-- Projekt 2 -->
  <div class="flex flex-col justify-center space-y-4 text-left">
    <h2 class="text-3xl sm:text-4xl text-brand-4">
      {t("projects.bbaf.title")}
    </h2>
    <p class="text-base sm:text-lg leading-relaxed">
      {t("projects.bbaf.description")}
    </p>
    <a
      class="underline underline-offset-4 text-brand-5 hover:text-brand-4 transition-colors duration-500 w-fit"
      href="https://baierbuamandfriends.de"
      target="_blank"
    >
      {t("projects.bbaf.cta")}
    </a>
  </div>

  <div class="flex justify-center items-center">
    <img
      class="rounded-md max-w-full h-auto shadow-md"
      src={BbafImage.src}
      alt="Baier Buam & Friends Projekt"
    />
  </div>
</div>
