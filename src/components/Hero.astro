---
import { CiMail } from "react-icons/ci";
import Container from "./Container.astro";
import { VscMail } from "react-icons/vsc";
import PrimaryButton from "./buttons/PrimaryButton.astro";
---

<Container>
  <div
    class="flex flex-col items-center justify-center h-[100vh] gap-12 text-center"
  >
    <div class="space-y-4">
      <p class="text-5xl">
        Hi, <span class="text-earth font-bold">Tobi</span> here.
      </p>
      <p class="text-lg">
        aspiring, passionate frontend developer and drummer based in passau,
        germany.
      </p>
    </div>

    <div class="flex flex-col items-center space-y-6">
      <img
        class="object-cover w-44 h-44 rounded-full"
        src="/assets/CV_Bild.jpg"
        alt="Profile Picture"
      />
      <PrimaryButton text={"Contact Me!"} />
    </div>
  </div>
</Container>
